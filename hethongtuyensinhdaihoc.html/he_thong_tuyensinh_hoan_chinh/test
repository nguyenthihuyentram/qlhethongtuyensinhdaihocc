import os

def check_project_folder():
    print("ğŸ” Kiá»ƒm tra thÆ° má»¥c dá»± Ã¡n...")
    
    required_files = ['app.py', 'tuyensinh.db']
    required_folders = ['templates']
    
    current_dir = os.getcwd()
    print(f"ğŸ“ ThÆ° má»¥c hiá»‡n táº¡i: {current_dir}")
    
    # Kiá»ƒm tra file
    missing_files = []
    for file in required_files:
        if not os.path.exists(file):
            missing_files.append(file)
    
    # Kiá»ƒm tra folder
    missing_folders = []
    for folder in required_folders:
        if not os.path.exists(folder):
            missing_folders.append(folder)
    
    if not missing_files and not missing_folders:
        print("âœ… Báº¡n Ä‘ang á»Ÿ ÄÃšNG thÆ° má»¥c dá»± Ã¡n!")
        return True
    else:
        print("âŒ Báº¡n Ä‘ang á»Ÿ SAI thÆ° má»¥c!")
        print("   Thiáº¿u files:", missing_files)
        print("   Thiáº¿u folders:", missing_folders)
        return False

# Cháº¡y kiá»ƒm tra
check_project_folder()